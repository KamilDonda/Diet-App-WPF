<UserControl x:Class="Projekt.OneDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt"
             mc:Ignorable="d" 
             d:DesignHeight="600"
             d:DesignWidth="700"
             Background="White">

    <Grid>

        <StackPanel Orientation="Vertical">

            <TextBlock Grid.Row="0" Grid.ColumnSpan="5"
                       x:Name="Day_textblock"
                       Text="Poniedziałek"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="30"
                       Margin="20"/>

            <DataGrid AutoGenerateColumns="False" 
                  Name="Day_datagrid" 
                  VerticalAlignment="Top"
                  HorizontalAlignment="Center"
                  FontSize="30">
                <DataGrid.Columns>
                    <DataGridTextColumn MinWidth="60" Header="Posiłek"/>
                    <DataGridTextColumn MinWidth="60" Header="Białko"/>
                    <DataGridTextColumn MinWidth="60" Header="Węglowodany"/>
                    <DataGridTextColumn MinWidth="60" Header="Tłuszcze"/>
                    <DataGridTextColumn MinWidth="60" Header="Kcal"/>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>

